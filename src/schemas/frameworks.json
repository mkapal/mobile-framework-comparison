{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["name", "infrastructure", "development"],
  "properties": {
    "name": {
      "type": "string"
    },
    "infrastructure": {
      "title": "Infrastructure",
      "type": "object",
      "required": ["platforms", "distribution"],
      "properties": {
        "platforms": {
          "type": "array",
          "minItems": 1,
          "title": "Which platforms should be supported?",
          "description": "Optional description",
          "items": {
            "type": "string",
            "anyOf": [
              {
                "type": "string",
                "title": "Android",
                "enum": ["android"]
              },
              {
                "type": "string",
                "title": "iOS",
                "enum": ["ios"]
              },
              {
                "type": "string",
                "title": "Windows Phone",
                "enum": ["windows-phone"]
              }
            ]
          },
          "uniqueItems": true
        },
        "distribution": {
          "type": "array",
          "minItems": 1,
          "title": "Distribution channels",
          "items": {
            "type": "string",
            "anyOf": [
              {
                "type": "string",
                "title": "App Store",
                "enum": ["app-store"]
              },
              {
                "type": "string",
                "title": "URL",
                "enum": ["url"]
              }
            ]
          },
          "uniqueItems": true
        }
      },
      "additionalItems": false
    },
    "development": {
      "title": "Development",
      "type": "object",
      "required": ["test"],
      "properties": {
        "test": {
          "type": "array",
          "minItems": 1,
          "title": "Test array",
          "items": {
            "type": "string",
            "anyOf": [
              {
                "type": "string",
                "title": "Lol",
                "enum": ["app-store"]
              },
              {
                "type": "string",
                "title": "Okay",
                "enum": ["url"]
              }
            ]
          },
          "uniqueItems": true
        }
      },
      "additionalItems": false
    },
    "application": {
      "type": "object",
      "properties": {},
      "additionalItems": false
    },
    "usage": {
      "type": "object",
      "properties": {},
      "additionalItems": false
    }
  },
  "additionalProperties": false
}
