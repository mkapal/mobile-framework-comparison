{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["name", "criteria"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string"
    },
    "criteria": {
      "type": "object",
      "required": ["infrastructure", "development"],
      "additionalProperties": false,
      "properties": {
        "infrastructure": {
          "title": "Infrastructure",
          "type": "object",
          "required": ["platforms", "freeLicense"],
          "additionalProperties": false,
          "properties": {
            "platforms": {
              "title": "Which mobile platforms should be supported?",
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "string",
                "anyOf": [
                  {
                    "type": "string",
                    "title": "Android",
                    "enum": ["android"]
                  },
                  {
                    "type": "string",
                    "title": "iOS",
                    "enum": ["ios"]
                  }
                ]
              },
              "uniqueItems": true
            },
            "freeLicense": {
              "title": "Software license type",
              "type": "boolean",
              "enumNames": ["Free", "Proprietary"]
            }
          }
        },
        "development": {
          "title": "Development",
          "type": "object",
          "required": ["performance"],
          "additionalProperties": false,
          "properties": {
            "performance": {
              "title": "Performance",
              "type": "integer",
              "readOnly": true,
              "minimum": 0,
              "maximum": 5
            }
          }
        }
      }
    }
  }
}
