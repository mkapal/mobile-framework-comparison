{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["name", "criteria"],
  "properties": {
    "name": {
      "type": "string"
    },
    "criteria": {
      "type": "object",
      "required": ["infrastructure", "development"],
      "properties": {
        "infrastructure": {
          "title": "Infrastructure",
          "type": "object",
          "required": ["platforms", "distribution"],
          "properties": {
            "platforms": {
              "type": "array",
              "minItems": 1,
              "title": "Which mobile platforms should be supported?",
              "items": {
                "type": "string",
                "anyOf": [
                  {
                    "type": "string",
                    "title": "Android",
                    "enum": ["android"]
                  },
                  {
                    "type": "string",
                    "title": "iOS",
                    "enum": ["ios"]
                  }
                ]
              },
              "uniqueItems": true
            },
            "distribution": {
              "type": "array",
              "minItems": 1,
              "title": "Distribution channels",
              "items": {
                "type": "string",
                "anyOf": [
                  {
                    "type": "string",
                    "title": "App Store",
                    "enum": ["app-store"]
                  },
                  {
                    "type": "string",
                    "title": "URL",
                    "enum": ["url"]
                  }
                ]
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false
        },
        "development": {
          "title": "Development",
          "type": "object",
          "required": ["performance"],
          "properties": {
            "performance": {
              "title": "Performance",
              "hidden": true,
              "type": "integer",
              "anyOf": [
                {
                  "type": "integer",
                  "title": "0",
                  "enum": [0]
                },
                {
                  "type": "integer",
                  "title": "1",
                  "enum": [1]
                },
                {
                  "type": "integer",
                  "title": "2",
                  "enum": [2]
                },
                {
                  "type": "integer",
                  "title": "3",
                  "enum": [3]
                }
              ]
            }
          },
          "additionalProperties": false
        },
        "application": {
          "title": "Application",
          "type": "object",
          "properties": {},
          "additionalProperties": false
        },
        "usage": {
          "title": "Usage",
          "type": "object",
          "properties": {},
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
