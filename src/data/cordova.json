{
  "name": "Cordova",
  "url": "https://cordova.apache.org",
  "description": "Cordova is a hybrid cross-platform framework owned by Apache Software Foundation. It does not contain any UI creation toolkit - it is a native mobile application runtime.",
  "criteria": {
    "infrastructure": {
      "mobile-os": ["android", "ios"],
      "development-platforms": ["linux", "macos", "windows"],
      "free-license": true,
      "pricing": "free",
      "microtransactions": true,
      "internationalization": 2,
      "long-term-feasibility": 1
    },
    "development": {
      "continuous-deployment": 2,
      "custom-code-integration": true,
      "custom-ide": false,
      "documentation": 1,
      "extensibility": 2,
      "initial-config": 1,
      "maintainability": 1,
      "scalability": 1,
      "technologies": ["css", "html", "javascript"],
      "testing": 1,
      "wysiwyg-editor": false
    },
    "application-usage": {
      "app-lifecycle": 2,
      "hardware": [
        "accelerometer",
        "gyro",
        "geolocation",
        "magnet",
        "pedometer",
        "proximity",
        "pressure",
        "light",
        "camera",
        "microphone",
        "nfc",
        "bluetooth",
        "wifi",
        "biometrics",
        "vibration"
      ],
      "offline": true,
      "security": 1,
      "software": [
        "local-storage",
        "file-system",
        "contacts",
        "call-history",
        "push-notifications",
        "browser"
      ],
      "touch-gestures": 0,
      "user-interface": 0
    }
  }
}
