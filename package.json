{
  "name": "mobile-framework-comparison",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "ci:prettier": "run-s \"prettier:no-write --list-different\"",
    "start": "BROWSER=none react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "run-s \"lint --fix\"",
    "schema:ts": "json2ts -i src/schemas/frameworks.json -o src/types/frameworks.ts",
    "prettier": "run-s \"prettier:no-write --write\"",
    "prettier:no-write": "prettier \"src/**/*.{js,json,ts,tsx}\""
  },
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@rjsf/core": "^2.4.0",
    "@rjsf/material-ui": "^2.4.0",
    "ajv": "^6.12.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/jest-json-schema": "^2.1.3",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "cross-env": "^7.0.2",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "glob": "^7.1.6",
    "husky": "^4.3.0",
    "jest-json-schema": "^2.1.0",
    "json-schema": "^0.2.5",
    "json-schema-to-typescript": "^9.1.1",
    "lint-staged": "^10.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn schema:ts",
      "pre-push": "cross-env CI=true yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier",
      "eslint --fix"
    ],
    "src/**/*.{json,md}": [
      "prettier"
    ]
  }
}
